@model NotifyHealth.Models.Notifications

@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">

            <h4 class="modal-title">Add Notification</h4>
        </div>
        @using (Ajax.BeginForm("CreateNotifications", "Home", Model, new AjaxOptions { HttpMethod = "Post", OnSuccess = "CreateAssetSuccess", UpdateTargetId = "frmEmp" }, new { @class = "form-horizontal", role = "form" }))
        {

            <div class="modal-body" id="frmCreate">
                @Html.Partial("_NotificationsModal")
            </div>

            <div class="modal-footer">
                <button type="button"   onclick="location.href='@Url.Action("CampaignDetails", "Home",new { CampaignId = Session["CampaignId"]})'"  data-dismiss="modal" aria-hidden="true" class="btn btn-secondary">Close</button>
                <input type="submit" class="btn btn-success" name="Save" value="Save">
            </div>

        }
    </div>
</div>