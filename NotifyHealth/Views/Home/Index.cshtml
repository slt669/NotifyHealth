<script>
    $(document).ready(function () {
          var assetListVM;
        $(function () {
             assetListVM = {
                dt: null,

                init: function () {
                    dt = $('#client-data-table').DataTable(
                        {
                    "lengthMenu": [[10, 20, -1], [10, 20, "All"]],
                    responsive: true,
                    dom: 'lf<"col-button"B>rtip',
                    searching: false,
                    scrollX: true,
                    scrollCollapse: true,
                    buttons: ['colvis'],
                    fixedColumns: {
                        leftColumns: 2
                    },

                    "serverSide": true,
                    "ajax": {
                        "type": "POST",
                        "url": '/Home/GetClients',
                        "contentType": 'application/json; charset=utf-8',
                        'data': function (data) {
                            data = JSON.stringify(data);
                            return data;
                        }
                    },
                    "fnServerParams": function (aoData) {


                        aoData['organizationID'] = @ViewBag.organizationID;


                            },
                           "paging": false,
                    "processing": true,
                    "deferRender": true,
                    "columns": [

                        { "title": "First Name", "data": "FirstName", "searchable": true, },
                        { "title": "Last Name", "data": "LastName", "searchable": true, },
                        { "title": "Client Status", "data": "ClientStatus", "searchable": true, },
                        { "title": "Phone Status", "data": "PhoneStatus", "searchable": true, },
                        { "title": "Participation Reason", "data": "ParticipationReason", "searchable": true },
                          {
                                "title": "Actions",
                                   "data": "ClientId",
                                "searchable": false,
                                "sortable": false,
                                "render": function (data, type, full, meta) {
                                    return '<a href="@Url.Action("ClientDetails", "Home")?id=' + data + '"class="details">View</a>';
                                }
                            }
                    ],
                    "order": [0, "Asc"],
                    });
                },

                refresh: function () {
                    dt.ajax.reload();
                }
            }
            assetListVM.init();
        });
            handleMorrisBarChart();

        });
</script>
