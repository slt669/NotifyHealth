<!-- ================== BEGIN PAGE LEVEL JS ================== -->
<script src="../Content/plugins/DataTables/media/js/jquery.dataTables.js"></script>
<script src="../Content/plugins/DataTables/media/js/dataTables.bootstrap.min.js"></script>
<script src="../Content/plugins/DataTables/extensions/Responsive/js/dataTables.responsive.min.js"></script>

<!-- ================== END PAGE LEVEL JS ================== -->


<script type="text/javascript">

        var assetListVM;
    $(function () {
        assetListVM = {
            dt: null,

            init: function () {
                dt = $('#assets-data-table').DataTable(
                    {
                        "lengthMenu": [[10, 20, -1], [10, 20, "All"]],
                        responsive: true,
                        dom: 'lf<"col-button"B>rtip',
                        searching: false,
                        scrollX: true,
                        scrollCollapse: true,
                        buttons: ['colvis'],
                        fixedColumns: {
                            leftColumns: 2
                        },

                        "serverSide": true,
                        "ajax": {
                            "type": "POST",
                            "url": '/Home/GetNotificationsbyCampaigns',
                            "contentType": 'application/json; charset=utf-8',
                            'data': function (data) {
                                data = JSON.stringify(data);
                                return data;
                            }
                        },
                        "fnServerParams": function (aoData) {


                            aoData['organizationID'] = @ViewBag.organizationID;

                            aoData['CampaignID'] = @ViewBag.CampaignID;

                        },
                        "paging": true,
                        "processing": true,
                        "deferRender": true,
                        "columns": [
                            {

                                "title": "Text", "data": "Text", "searchable": true,
                            },
                            {
                                "title": "Period", "data": "Period", "searchable": true,
                            },
                            { "title": "Notification Type", "data": "NotificationType", "searchable": true, },
                            {
                                "title": "Status", "data": "Status", "searchable": true,
                            },
                        ],
                        "order": [0, "Asc"]
                    });
            },
            refresh: function () {
                dt.ajax.reload();
            }



        }
        // initialize the datatables
        assetListVM.init();
    });


</script>